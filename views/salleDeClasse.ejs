<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Salles disponibles</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('partials/head.ejs') %>
    <%- include('partials/header.ejs') %>
  

  <main class="flex flex-col items-center p-4 pt-20">
    <h2 class="text-lg font-semibold mt-10">Sélectionnez une salle libre :</h2>

    <div class="space-y-6 mt-10" >
      <!-- Bâtiment IC1 -->
      <div>
        <h3 class="text-lg font-semibold mb-2">Bâtiment IC1 :</h3>
        <ul id="ic1Container" class="flex flex-col gap-2"></ul>
      </div>

      <!-- Bâtiment IC2 -->
      <div>
        <h3 class="text-lg font-semibold mb-2">Bâtiment IC2 :</h3>
        <ul id="ic2Container" class="flex flex-col gap-2"></ul>
      </div>

      <!-- Bâtiment ALG -->
      <div>
        <h3 class="text-lg font-semibold mb-2">Bâtiment ALG :</h3>
        <ul id="algContainer" class="flex flex-col gap-2"></ul>
      </div>
    </div>
  </main>

  <%- include("partials/footer.ejs") %>

  <script>
    function addSalle(containerId, salleName) {
      const container = document.getElementById(containerId);
      const li = document.createElement('li');
      li.className = "bg-blue-300 text-black font-semibold text-center rounded-full py-2";
      li.textContent = salleName;
      container.appendChild(li);
    }

    // Ajout des salles (exemple)
    document.addEventListener('DOMContentLoaded', () => {
      // IC1
      addSalle('ic1Container', 'Salle 101');
      addSalle('ic1Container', 'Salle 102');
      addSalle('ic1Container', 'Salle 103');

      // IC2
      addSalle('ic2Container', 'Salle 201');
      addSalle('ic2Container', 'Salle 202');
      addSalle('ic2Container', 'Salle 203');

      // ALG
      addSalle('algContainer', 'Salle A1');
      addSalle('algContainer', 'Salle A2');
      addSalle('algContainer', 'Salle A3');
    });
  </script>

</body>
</html>
