<!DOCTYPE html>
<%- include('partials/head.ejs') %>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
  
<body class="bg-[#FAF3E5] min-h-screen flex flex-col">
    <%- include('partials/header.ejs') %>
    <main class="flex-1 flex items-center justify-center px-4 py-12">
        <div class="flex flex-col sm:flex-row items-center justify-center max-w-6xl w-full gap-6">
            <!-- Texte gauche -->
            <div id="leftText" class="text-center sm:text-center sm:w-1/3 text-gray-700 text-lg">
                Bienvenue sur Argos, la plateforme qui vous guide.
            </div>

            <!-- Image centrale -->
            <div class="w-[450px] h-[450px] lg:w-[650px] lg:h-[650px] relative flex justify-center items-center overflow-hidden">

      <img id="sliderImage"
     src="/logoargos.png"
     alt="Slide 1"
     class="w-full h-full object-contain max-w-full max-h-full transition-all duration-700 ease-in-out rounded-xl" />
    </div>

            <!-- Texte droite -->
            <div id="rightText" class="text-center sm:text-center sm:w-1/3 text-gray-700 text-lg">
                Découvrez nos fonctionnalités innovantes.
            </div>
        </div>
    </main>

    <%- include("partials/footer.ejs") %>
</body>
</html>

<script>
  const images = [
  {
    src: '/edt.png',
    left: "Visualisez votre emploi du temps en un clin d'œil.",
    right: "Gérez vos journées avec simplicité et efficacité."
  },
  {
    src: '/mentorat.png',
    left: "Participez au programme de mentorat.",
    right: "Trouvez conseils et soutien auprès de vos camarades."
  },
  {
    src: '/messagerie.png',
    left: "Discutez librement avec vos amis et collègues.",
    right: "Une messagerie rapide, fluide et sécurisée."
  },
  {
    src: '/logoargos.png',
    left: "Bienvenue sur Argos, la plateforme qui vous guide.",
    right: "Gérez vos journées avec simplicité et efficacité."
  }
];

  let current = 0;

  function updateSlider() {
    const img = document.getElementById('sliderImage');
    const left = document.getElementById('leftText');
    const right = document.getElementById('rightText');

    // Fade out
    img.style.opacity = 0;
    left.style.opacity = 0;
    right.style.opacity = 0;

    setTimeout(() => {
      // Change content
      img.src = images[current].src;
      left.textContent = images[current].left;
      right.textContent = images[current].right;

      // Fade in
      img.style.opacity = 1;
      left.style.opacity = 1;
      right.style.opacity = 1;

      current = (current + 1) % images.length;
    }, 300);
  }

  setInterval(updateSlider, 5000); // change every 4 seconds
</script>
